// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        	Int     @id @default(autoincrement())
  createdAt 	DateTime @default(now())
  modifiedAt	DateTime @updatedAt

  email 		String  @unique
  displayName	String?
  hash 		String
  hashedRt 	String?

  sites Site[]
  reports Report[]

  @@map("users")
}

model Site {
  id          Int      @id @default(autoincrement())
  name         String
  user User @relation(fields: [userId], references: [id])
  userId Int
  reports    Report[]
}

model Report {
  id           Int      @id @default(autoincrement())
  title        String
  user  User @relation(fields: [userId], references: [id])
  userId Int
  sites        Site[] 
  type         Type     @relation(fields: [typeId], references: [id])
  typeId       Int
  tags         Tag[]
  status       Status   @relation(fields: [statusId], references: [id])
  statusId     Int
}

model Type {
  id           Int      @id @default(autoincrement())
  name          String
  reports     Report[]
}

model Tag {
  id           Int      @id @default(autoincrement())
  name          String
  reports     Report[]
}

model Status {
  id           Int      @id @default(autoincrement())
  name          String
  reports     Report[]
}